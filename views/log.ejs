<%- include('header') -%>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

   <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .miccu {
          background: linear-gradient(45deg, #0f0f23, #1a1a2e, #16213e, #0f0f23);
            background-size: 400% 400%;
            animation: galaxyMove 8s ease-in-out infinite;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Space Grotesk', sans-serif;
            overflow: hidden;
            position: relative;
        }

        @keyframes galaxyMove {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        /* Stars background */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            border-radius: 50%;
            animation: twinkle 3s infinite;
        }

        @keyframes twinkle {
            0%, 100% { opacity: 0.3; transform: scale(1); }
            50% { opacity: 1; transform: scale(1.5); }
        }

        .shooting-star {
            position: absolute;
            width: 2px;
            height: 2px;
            background: linear-gradient(45deg, #fff, #64ffda);
            border-radius: 50%;
            animation: shoot 2s linear infinite;
        }

        @keyframes shoot {
            0% {
                transform: translateX(-100px) translateY(100px);
                opacity: 0;
            }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% {
                transform: translateX(100vw) translateY(-100px);
                opacity: 0;
            }
        }
 /* Magic particles around owl */
 .magic-particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: #64ffda;
            border-radius: 50%;
            animation: magic 3s infinite;
        }

        @keyframes magic {
            0%, 100% {
                opacity: 0;
                transform: scale(0) rotate(0deg);
            }
            50% {
                opacity: 1;
                transform: scale(1.5) rotate(180deg);
            }
        }
        .container {
            position: relative;
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .login {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 40px 35px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            z-index: 10;
            transform: translateY(60px);
        }

        .login-title {
            text-align: center;
            color: #4a5568;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

        .input-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        .input-group input {
            width: 100%;
            padding: 15px 15px 15px 50px;
            border: 2px solid #e2e8f0;
            border-radius: 15px;
            font-size: 16px;
            color: #4a5568;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            outline: none;
        }

        .input-group input:focus {
            border-color: #667eea;
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .input-group input:focus + i {
            color: #667eea;
        }

        .login-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 15px;
            color: white;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 10px;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
        }

        .login-btn:active {
            transform: translateY(0);
        }

        .panda-container {
            position: absolute;
            top: -120px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
        }

        .panda {
            position: relative;
            width: 160px;
            height: 80px;
        }

        .face {
            width: 120px;
            height: 110px;
            background: white;
            border-radius: 60px 60px 50px 50px;
            position: absolute;
            top: 25px;
            left: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border: 3px solid #f7fafc;
        }

        .ear {
            width: 35px;
            height: 30px;
            background: #2d3748;
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            position: absolute;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .ear-left {
            top: 10px;
            left: 15px;
            transform: rotate(-25deg);
        }

        .ear-right {
            top: 10px;
            right: 15px;
            transform: rotate(25deg);
        }

        .eye {
            width: 28px;
            height: 32px;
            background: #2d3748;
            border-radius: 50%;
            position: absolute;
            top: 35px;
        }

        .eye-left {
            left: 25px;
            transform: rotate(-15deg);
        }

        .eye-right {
            right: 25px;
            transform: rotate(15deg);
        }

        .eyeball {
            width: 12px;
            height: 12px;
            background: white;
            border-radius: 50%;
            position: absolute;
            top: 8px;
            left: 8px;
            transition: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .blush {
            width: 18px;
            height: 12px;
            background: #fed7d7;
            border-radius: 50%;
            position: absolute;
            top: 50px;
            opacity: 0.7;
        }

        .blush-left {
            left: 15px;
        }

        .blush-right {
            right: 15px;
        }

        .nose {
            width: 12px;
            height: 12px;
            background: #2d3748;
            border-radius: 50% 50% 50% 50%;
            position: absolute;
            top: 60px;
            left: 54px;
            transform: rotate(45deg);
        }

        .mouth {
            position: absolute;
            top: 75px;
            left: 50%;
            transform: translateX(-50%);
        }

        .mouth-part {
            width: 12px;
            height: 6px;
            background: #2d3748;
            border-radius: 0 0 12px 12px;
            position: absolute;
        }

        .mouth-left {
            left: -8px;
        }

        .mouth-right {
            right: -8px;
        }

        .hand {
            width: 40px;
            height: 40px;
            background: #2d3748;
            border-radius: 15px 15px 20px 20px;
            position: absolute;
            transition: all 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .hand-left {
            top: 80px;
            left: -25px;
            transform-origin: center bottom;
        }

        .hand-right {
            top: 80px;
            right: -25px;
            transform-origin: center bottom;
        }

        .paw {
            width: 45px;
            height: 45px;
            background: #2d3748;
            border-radius: 50% 50% 30% 30%;
            position: absolute;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .paw-left {
            bottom: -100px;
            left: 20px;
        }

        .paw-right {
            bottom: -100px;
            right: 20px;
        }

        .paw-pad {
            background: #4a5568;
            border-radius: 50%;
            position: absolute;
        }

        .main-pad {
            width: 20px;
            height: 16px;
            top: 20px;
            left: 12px;
            border-radius: 50% 50% 40% 40%;
        }

        .toe-pad {
            width: 8px;
            height: 8px;
        }

        .toe1 { top: 8px; left: 8px; }
        .toe2 { top: 5px; left: 18px; }
        .toe3 { top: 8px; right: 8px; }

   

        @keyframes float {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100vh) rotate(360deg);
                opacity: 0;
            }
        }

        /* Responsive */
        @media (max-width: 480px) {
            .container {
                padding: 10px;
            }
            
            .login {
                padding: 30px 25px;
                margin-top: 60px;
            }
            
            .panda-container {
                top: -100px;
            }
            
            .panda {
                transform: scale(0.8);
            }
        }
    </style>
</head>
<div class="miccu">
    <div class="container">
        <div class="panda-container">
            <div class="panda">
                <div class="ear ear-left"></div>
                <div class="ear ear-right"></div>
                <div class="face">
                    <div class="eye eye-left">
                        <div class="eyeball eyeball-left"></div>
                    </div>
                    <div class="eye eye-right">
                        <div class="eyeball eyeball-right"></div>
                    </div>
                    <div class="blush blush-left"></div>
                    <div class="blush blush-right"></div>
                    <div class="nose"></div>
                    <div class="mouth">
                        <div class="mouth-part mouth-left"></div>
                        <div class="mouth-part mouth-right"></div>
                    </div>
                </div>
                <div class="hand hand-left"></div>
                <div class="hand hand-right"></div>
                <div class="paw paw-left">
                    <div class="paw-pad main-pad"></div>
                    <div class="paw-pad toe-pad toe1"></div>
                    <div class="paw-pad toe-pad toe2"></div>
                    <div class="paw-pad toe-pad toe3"></div>
                </div>
                <div class="paw paw-right">
                    <div class="paw-pad main-pad"></div>
                    <div class="paw-pad toe-pad toe1"></div>
                    <div class="paw-pad toe-pad toe2"></div>
                    <div class="paw-pad toe-pad toe3"></div>
                </div>
            </div>
        </div>

        <form method="post" action="/login" class="login">
            <h2 class="login-title">Welcome Back</h2>

            <div class="input-group">
                <input type="text" name="loginUser" placeholder="Enter username" id="username">
                <i class="fas fa-user"></i>
            </div>
            <div class="input-group">
                <input type="password" placeholder="Enter password" id="password">
                <i class="fas fa-lock"></i>
            </div>
            <button onclick="submit()" class="login-btn" type="button">Sign In</button>
        </form>
    </div>

    <script>
       function createStars() {
            const starsContainer = document.querySelector('.miccu');
            
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                star.style.animationDuration = (Math.random() * 2 + 2) + 's';
                starsContainer.appendChild(star);
            }
        }

        // Create shooting stars
        function createShootingStars() {
            setInterval(() => {
                const shootingStar = document.createElement('div');
                shootingStar.className = 'shooting-star';
                shootingStar.style.top = Math.random() * 50 + '%';
                shootingStar.style.left = '0%';
                document.body.appendChild(shootingStar);
                
                setTimeout(() => {
                    shootingStar.remove();
                }, 2000);
            }, 3000);
        }

        // Create magic particles around owl
        function createMagicParticles() {
            const owlContainer = document.querySelector('.container');
            
            for (let i = 0; i < 8; i++) {
                const particle = document.createElement('div');
                particle.className = 'magic-particle';
                
                const angle = (i / 8) * Math.PI * 2;
                const radius = 80;
                const x = Math.cos(angle) * radius;
                const y = Math.sin(angle) * radius;
                
                particle.style.left = (60 + x) + 'px';
                particle.style.top = (70 + y) + 'px';
                particle.style.animationDelay = (i * 0.2) + 's';
                
                owlContainer.appendChild(particle);
            }
        }

        // Initialize effects
        createStars();
        createShootingStars();
        createMagicParticles();
      
        $(document).ready(function() {
            // Welcome message
           

            // Username input focus
            $("#username").focus(function() {
                // Panda looks at the username field
                $(".eyeball-left").css({
                    top: '12px',
                    left: '12px'
                });
                $(".eyeball-right").css({
                    top: '12px',
                    left: '4px'
                });
                
                // Hands move to normal position
                $(".hand-left").css({
                    transform: 'rotate(0deg) translateY(0)',
                    top: '80px',
                    left: '25px'
                });
                $(".hand-right").css({
                    transform: 'rotate(0deg) translateY(0)',
                    top: '80px',
                    right: '25px'
                });
            });

            // Password input focus
            $("#password").focus(function() {
                // Panda covers eyes (shy)
                $(".eyeball-left").css({
                    top: '8px',
                    left: '8px'
                });
                $(".eyeball-right").css({
                    top: '8px',
                    left: '8px'
                });
                
                // Hands cover eyes
                $(".hand-left").css({
                    transform: 'rotate(-45deg) translateY(-30px)',
                    top: '80px',
                    left: '80px'
                });
                $(".hand-right").css({
                    transform: 'rotate(45deg) translateY(-30px)',
                    top: '80px',
                    right: '80px'
                });
            });

            // When inputs lose focus, return to normal
            $("input").blur(function() {
                if (!$("input").is(":focus")) {
                    $(".eyeball-left").css({
                        top: '8px',
                        left: '8px'
                    });
                    $(".eyeball-right").css({
                        top: '8px',
                        left: '8px'
                    });
                    
                    $(".hand-left").css({
                        transform: 'rotate(0deg) translateY(0)',
                        top: '80px',
                        left: '-25px'
                    });
                    $(".hand-right").css({
                        transform: 'rotate(0deg) translateY(0)',
                        top: '80px',
                        right: '-25px'
                    });
                }
            });

            // Login button click animation
            $(".login-btn").click(function() {
                // Panda happy animation
                $(".eyeball-left, .eyeball-right").css({
                    top: '12px',
                    left: '8px'
                });
                
                // Wave hands
                $(".hand-left").css({
                    transform: 'rotate(-20deg) translateY(10px)',
                    top: '60px'
                });
                $(".hand-right").css({
                    transform: 'rotate(20deg) translateY(10px)',
                    top: '60px'
                });
                
                setTimeout(function() {
                    $(".hand-left").css({
                        transform: 'rotate(200deg) translateY(100px)'
                    });
                    $(".hand-right").css({
                        transform: 'rotate(200deg) translateY(100px)'
                    });
                }, 200);
                
                setTimeout(function() {
                    $(".hand-left").css({
                        transform: 'rotate(0deg) translateY(0)',
                        top: '80px'
                    });
                    $(".hand-right").css({
                        transform: 'rotate(0deg) translateY(0)',
                        top: '80px'
                    });
                }, 400);
            });

            // Eye tracking mouse movement (subtle effect)
            $(document).mousemove(function(e) {
                if (!$("input").is(":focus")) {
                    const centerX = $(window).width() / 2;
                    const centerY = $(window).height() / 2;
                    const x = (e.pageX - centerX) / centerX;
                    const y = (e.pageY - centerY) / centerY;
                    
                    $(".eyeball-left").css({
                        top: (8 + y * 2) + 'px',
                        left: (8 + x * 2) + 'px'
                    });
                    $(".eyeball-right").css({
                        top: (8 + y * 2) + 'px',
                        left: (8 + x * 2) + 'px'
                    });
                }
            });
        });
    </script>
</div>

