<script>
  const menuToggle = document.getElementById("menuToggle");
  const sideNav = document.getElementById("sideNav");
  const overlay = document.getElementById("overlay");

  menuToggle.addEventListener("click", toggleSideNav);
  overlay.addEventListener("click", closeSideNav);

  function toggleSideNav() {
    const isOpen = sideNav.classList.contains("open");
    menuToggle.classList.toggle("active", !isOpen);
    sideNav.classList.toggle("open", !isOpen);
    overlay.classList.toggle("active", !isOpen);
    sideNav.setAttribute("aria-hidden", isOpen);
  }
  function closeSideNav() {
    menuToggle.classList.remove("active");
    sideNav.classList.remove("open");
    overlay.classList.remove("active");
    sideNav.setAttribute("aria-hidden", "true");
  }
</script>



<script>
/* ---------- Tiny Cart Core (no deps) ---------- */
const Cart = (() => {
  const KEY = "iwd_cart_v1";
  const read = () => JSON.parse(localStorage.getItem(KEY) || "{}");
  const write = (state) => localStorage.setItem(KEY, JSON.stringify(state));
  const getCount = (state = read()) => Object.values(state).reduce((a,b)=>a+b,0);

  const setQty = (id, qty) => {
    const s = read();
    if (qty <= 0) { delete s[id]; } else { s[id] = qty; }
    write(s);
    window.dispatchEvent(new CustomEvent("cart:change", { detail: { state: s, count: getCount(s) }}));
    return s;
  };

  const inc = (id, step=1) => {
    const s = read();
    const n = (s[id] || 0) + step;
    return setQty(id, n);
  };

  return { read, write, setQty, inc, getCount };
})();

/* ---------- Wire up any .product-card ---------- */
function mountProductCards(root = document) {
  root.querySelectorAll(".product-card").forEach(card => {
    if (card.__wired) return; // avoid double-binding
    card.__wired = true;

    const id = card.dataset.id;
    const name = card.dataset.name || "Item";
    const price = Number(card.dataset.price || 0);

    // Find or create action area
    let btn = card.querySelector(".add-to-cart");
    if (!btn) {
      btn = document.createElement("button");
      btn.className = "add-to-cart";
      btn.textContent = "ðŸ›’ Add to Cart";
      card.appendChild(btn);
    }

    // Create qty controls (hidden until added)
    const controls = document.createElement("div");
    controls.className = "qty-controls";
    controls.innerHTML = `
      <button type="button" class="qty-dec" aria-label="Decrease">âˆ’</button>
      <span class="qty-val">1</span>
      <button type="button" class="qty-inc" aria-label="Increase">+</button>
    `;
    controls.style.display = "none";
    btn.insertAdjacentElement("afterend", controls);

    const dec = controls.querySelector(".qty-dec");
    const inc = controls.querySelector(".qty-inc");
    const val = controls.querySelector(".qty-val");

    const syncUI = () => {
      const qty = Cart.read()[id] || 0;
      if (qty > 0) {
        btn.style.display = "none";
        controls.style.display = "inline-flex";
        val.textContent = qty;
      } else {
        btn.style.display = "inline-block";
        controls.style.display = "none";
      }
    };

    // Events
    btn.addEventListener("click", () => {
      Cart.inc(id, 1);
      // Optional: toast
      // console.log(`Added ${name} (â‚¹${price})`);
      syncUI();
    });

    inc.addEventListener("click", () => {
      Cart.inc(id, 1);
      syncUI();
    });

    dec.addEventListener("click", () => {
      const s = Cart.read();
      const next = (s[id] || 0) - 1;
      Cart.setQty(id, next);
      syncUI();
    });

    // Initial UI based on saved cart
    syncUI();
  });
}

/* ---------- Optional: Navbar badge updater ---------- */
/* Example badge element: <span id="cart-badge">0</span> */
(function setupCartBadge(){
  const badge = document.getElementById("cart-badge");
  if (!badge) return;
  const render = (count = Cart.getCount()) => badge.textContent = count;
  window.addEventListener("cart:change", (e) => render(e.detail.count));
  render();
})();

/* Mount on load */
document.addEventListener("DOMContentLoaded", () => mountProductCards());
</script>

